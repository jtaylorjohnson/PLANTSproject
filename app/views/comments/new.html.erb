<% if @comment.plant %>
<h1>New Comment for "<%= @plant.title%>"</h1>
<% else %>
<h1>New Comment</h1>
<% end %>

<%= form_for([@comment.plant,@comment]) do |f|%>
    
    <% if !@comment.plant %>
        <%= f.label :plant %>
        <%= f.collection_select :plant_id, Plant.all, :title %>
    <% else %>
        <%= f.hidden_field :plant_id
    <%end%>


    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.submit %>
<% end %>